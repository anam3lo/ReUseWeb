{
  "name": "ReUse Chatbot",
  "version": "1.0.0",
  "description": "Chatbot conversacional para orientação de cadastro de produtos na plataforma ReUse",
  "main": "node-red-chatbot-flow.json",
  "scripts": {
    "start": "node-red",
    "import-flow": "node-red-admin flow import node-red-chatbot-flow.json",
    "deploy": "node-red-admin flow deploy",
    "status": "node-red-admin status"
  },
  "keywords": [
    "node-red",
    "chatbot",
    "reuse",
    "sustainability",
    "tutorial"
  ],
  "author": "ReUse Team",
  "license": "MIT",
  "dependencies": {
    "node-red": "^3.0.0"
  },
  "devDependencies": {
    "node-red-admin": "^0.2.0"
  },
  "node-red": {
    "settings": {
      "httpAdminRoot": "/admin",
      "httpNodeRoot": "/api",
      "userDir": "./node-red-data",
      "flowFile": "flows.json",
      "credentialSecret": "reuse-chatbot-secret-key",
      "adminAuth": {
        "type": "credentials",
        "users": [
          {
            "username": "admin",
            "password": "$2a$08$zZWtXTja0fB1pzD4sHCMyOCMYz2Z6dNbM6tl8sJogENOMcxWV9DN.",
            "permissions": "*"
          }
        ]
      },
      "logging": {
        "console": {
          "level": "info",
          "metrics": false,
          "audit": false
        },
        "file": {
          "level": "info",
          "filename": "node-red.log",
          "maxFiles": 5,
          "maxSize": "10MB"
        }
      },
      "contextStorage": {
        "default": {
          "module": "localfilesystem"
        }
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anam3lo/ReUseWeb.git"
  },
  "bugs": {
    "url": "https://github.com/anam3lo/ReUseWeb/issues"
  },
  "homepage": "https://github.com/anam3lo/ReUseWeb#readme"
}
